<odoo>
    <record id="view_class_form" model="ir.ui.view">
        <field name="name">odoo.class.form</field>
        <field name="model">odoo.class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="student_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_class_tree" model="ir.ui.view">
        <field name="name">odoo.class.tree</field>
        <field name="model">odoo.class</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">odoo.class</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
